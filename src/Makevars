PKG_CXXFLAGS = -I../inst/include/
PKG_LIBS =

PKG_CPPFLAGS = -DTHRUST_DEVICE_SYSTEM=THRUST_DEVICE_BACKEND_TBB # -Wfatal-errors

#	rthgini.o \
#	rthhist.o \
#	rthkendall.o \
#	rthma.o \
#	rthrnorm.o \
#	rthrunif.o \

R_OBJS = \
	hash.o \
  rthcolsums.o\
	rthdist.o \
	rthmean.o \
	rthnorm.o \
	rthorder.o \
	rthpdist.o \
	rthpearson.o \
	rthsort.o \
	rthtable.o \
	rthxpos.o \
	threads.o


OBJECTS = $(R_OBJS)

BACKEND = TBB
all: $(SHLIB)

ifeq "$(BACKEND)" "CUDA"
NVCC = 
CUDA_INCS = 

%.o: %.cpp
	$(NVCC) -DGPU -x cu -c -Xcompiler "-fPIC" $(CUDA_INCS) $< -o $@
Rth.so: $(OBJECTS)
	$(NVCC) --shared $(OBJECTS) -o $@
else
$(SHLIB): $(OBJECTS)
endif


clean:
	@rm -rf *.o *.so *.dll \
		Makevars $(USER_CONF) $(SHLIB) $(OBJECTS)

